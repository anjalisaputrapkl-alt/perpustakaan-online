/* Tema Tahun Baru */
:root {
    --primary: #d4af37;
    /* Gold */
    --primary-2: #f1c40f;
    --primary-dark: #b8860b;
    --bg: #0a0a0a;
    --surface: #1a1a1a;
    --text: #ffffff;
    --border: #333333;
    --success: #d4af37;
    --danger: #cf6679;
}

body {
    background-color: #0a0a0a !important;
    background-image:
        linear-gradient(rgba(10, 10, 10, 0.8), rgba(10, 10, 10, 0.8)),
        url('https://www.transparenttextures.com/patterns/stardust.png') !important;
    color: #ffffff !important;
    position: relative;
    min-height: 100vh;
}

/* Fireworks Ornament */
body::before {
    content: "";
    position: fixed;
    top: 20px;
    right: 20px;
    width: 180px;
    height: 180px;
    background-image: url('https://cdn-icons-png.flaticon.com/512/3238/3238059.png');
    /* Fireworks icon */
    background-size: contain;
    background-repeat: no-repeat;
    z-index: 10001;
    pointer-events: none;
    opacity: 0.9;
}

.app,
.content,
.container,
.main-content {
    background-color: transparent !important;
}

.nav-sidebar {
    background: #000 !important;
    border-right: 2px solid #d4af37 !important;
    box-shadow: 4px 0 20px rgba(212, 175, 55, 0.15) !important;
}

.header,
.topbar {
    background: rgba(20, 20, 20, 0.9) !important;
    backdrop-filter: blur(10px);
    border-bottom: 1px solid #d4af37 !important;
}

.card,
.stat,
.chart-box,
.panel {
    background: rgba(26, 26, 26, 0.9) !important;
    border-color: #444 !important;
    color: #fff !important;
}

.stat strong,
.stat small,
.card h3,
.card p,
.sidebar-section h3,
.topbar strong {
    color: #fff !important;
}

.btn-primary,
.btn-search-modern {
    background: linear-gradient(135deg, #d4af37 0%, #b8860b 100%) !important;
    color: #000 !important;
    font-weight: 700 !important;
    border: none !important;
}

.stat-icon {
    background: rgba(212, 175, 55, 0.2) !important;
    color: #d4af37 !important;
}