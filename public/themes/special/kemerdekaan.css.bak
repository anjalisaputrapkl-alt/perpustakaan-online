/* Tema Kemerdekaan RI - 17 Agustus */
:root {
    --primary: #d62828;
    /* Merah Bendera */
    --primary-2: #ff4d4d;
    --primary-dark: #8b0000;
    --bg: #fff5f5;
    --surface: #ffffff;
    --text: #1a1a1a;
    --accent: #d62828;
    --border: #f8d7da;
    --success: #16a34a;
    --danger: #d62828;
}

/* Global Background & Ornament */
body {
    border-top: 8px solid #d62828;
    background-color: var(--bg) !important;
    background-image:
        linear-gradient(rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.9)),
        url('https://www.transparenttextures.com/patterns/carbon-fibre.png') !important;
    position: relative;
    min-height: 100vh;
}

/* Ribbon Ornament */
body::before {
    content: "";
    position: fixed;
    top: 0;
    right: 0;
    width: 250px;
    height: 250px;
    background-image: url('https://cdn-icons-png.flaticon.com/512/5315/5315147.png');
    /* Red-White ribbon icon */
    background-size: contain;
    background-repeat: no-repeat;
    z-index: 10001;
    pointer-events: none;
    opacity: 0.9;
}

/* Batik Pattern Accent */
body::after {
    content: "";
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('https://www.transparenttextures.com/patterns/p6.png');
    opacity: 0.05;
    z-index: -1;
    pointer-events: none;
}

.app,
.content,
.container,
.main-content {
    background-color: transparent !important;
}

.nav-sidebar {
    background: linear-gradient(180deg, #d62828 0%, #8b0000 100%) !important;
    box-shadow: 4px 0 15px rgba(214, 40, 40, 0.2) !important;
}

.nav-sidebar .nav-link {
    color: rgba(255, 255, 255, 0.9) !important;
}

.nav-sidebar .nav-link:hover,
.nav-sidebar .nav-link.active {
    background: rgba(255, 255, 255, 0.2) !important;
    color: white !important;
    border-left-color: #ffffff !important;
}

.school-profile-header {
    background: rgba(255, 255, 255, 0.1) !important;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2) !important;
}

.header,
.topbar {
    background: rgba(255, 255, 255, 0.8) !important;
    backdrop-filter: blur(10px);
    border-bottom: 3px solid #d62828 !important;
}

.card,
.stat,
.chart-box,
.panel {
    border-color: #f8d7da !important;
    background-color: rgba(255, 255, 255, 0.95) !important;
}

.stat-icon {
    background: rgba(214, 40, 40, 0.1) !important;
    color: #d62828 !important;
}